import java.util.Scanner;

public class JPA04 {
	static Scanner keyboard = new Scanner(System.in);
	public static void main(String args[]) {
		long num;
		do
		{
			System.out.print("Input n(0<=n<=16):");
			num = keyboard.nextInt();
		}
		while(num <= 0 && num !=999 || num >= 16 && num != 999);
		while(num != 999)
		{
			System.out.println(num + " 的階乘(尾端遞迴) = " + Tail(num,1));
			System.out.println(num + " 的階乘(迴圈) = " + Loop(num));
			do
			{
				System.out.print("Input n(0<=n<=16):");
				num = keyboard.nextInt();
			}
			while(num <= 0 && num !=999 || num >= 16 && num != 999);
		}
	}
	public static long Loop(long a)
	{
		long sum = 1;
		for(long i=1;i<=a;i++)
		{
			sum = (sum * i);
		}
		return sum;
	}
	public static long Tail(long a,long b)
	{
		if (a == 1)
		{
			return b;
		}
		else
		{
			return Tail(a-1,a*b);
		}
	}
}
